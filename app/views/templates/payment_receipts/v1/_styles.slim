  /* ----------------------- variable ----------------------- */
  :root {
    --border-color: #D9DEE7;
  }

  @font-face {
    font-family: 'Inter var';
    font-style: normal;
    font-weight: 100 900;
    font-display: swap;
    src: local('Inter-roman') format('woff2');
    font-named-instance: 'Regular';
  }

  @font-face {
    font-family: 'Inter var';
    font-style: italic;
    font-weight: 100 900;
    font-display: swap;
    src: local('Inter-italic') format('woff2');
    font-named-instance: 'Italic';
  }
  h1, h2, p { margin: 0; padding: 0; }
  html { font-family: Inter, sans-serif; }
  h1 { color: #19212e; font-weight: 700; font-size: 24px; line-height: 32px; }
  h2 {
    color: #19212e;
    font-weight: 700;
    font-size: 18px;
    line-height: 24px;
  }
  .body-1 {
    color: #19212e;
    font-weight: 600;
    font-size: 10px;
    line-height: 16px;
  }
  .body-2 {
    color: #19212e;
    font-weight: 400;
    font-size: 10px;
    line-height: 16px;
  }
  .body-3 {
    color: #66758f;
    font-weight: 400;
    font-size: 9px;
    line-height: 16px;
  }

  .mb-4 {
    margin-bottom: 4px;
  }
  .mb-24 {
    margin-bottom: 24px;
  }
  .mt-24 {
    margin-top: 24px;
  }

  .overflow-auto {
    overflow: auto;
  }
  tr {
    break-inside: avoid;
  }

  .payment-receipt-title {
    display: inline;
  }
  .header-logo {
    float: right;
    max-height: 32px;
  }

  .payment-receipt-information-column {
    float: left;
    width: 50%;
  }
  .payment-receipt-information-table tr td:first-child {
    padding: 0 16px 0 0;
  }
  .payment-receipt-information-table tr td:last-child {
    width: 55%;
  }
  .payment-receipt-information-table, tr td{
    text-wrap: normal;
    word-wrap: break-word;
    vertical-align: top;
  }
  .payment-receipt-information-table {
    border-collapse: collapse;
    table-layout: fixed;
    width: 100%;
  }

  .billing-information-column {
    float: left;
    width: 50%;
  }

  .payment-receipt-resume-table tr.first_child td {
    color: #66758F;
  }
  .payment-receipt-resume-table tr {
    border-bottom: 1px solid var(--border-color);
  }
  .payment-receipt-resume-table tr td {
    padding-top: 8px;
    padding-bottom: 8px;
    text-align: right;
    word-wrap: break-word;
  }
  .payment-receipt-resume-table td:first-child {
    width: 50%;
    text-align: left;
  }
  .payment-receipt-resume-table td:nth-child(2) {
    width: 12.5%;
    max-width: 10vw;
  }
  .payment-receipt-resume-table td:nth-child(3) {
    width: 12.5%;
    max-width: 10vw;
  }
  .payment-receipt-resume-table td:nth-child(4) {
    width: 12.5%;
  }
  .payment-receipt-resume-table td:nth-child(5) {
    width: 12.5%;
    max-width: 10vw;
  }
  .payment-receipt-resume table {
    border-collapse: collapse;
  }
  .payment-receipt-resume .total-table tr td {
    padding-top: 8px;
    padding-bottom: 8px;
    text-align: right;
  }
  .payment-receipt-resume .total-table td:first-child {
    width: 50%;
  }
  .payment-receipt-resume .total-table tr:not(:last-child) td:nth-child(2) {
    border-bottom: 1px solid var(--border-color);
    text-align: left;
    width: 35%;
  }
  .payment-receipt-resume .total-table tr:not(:last-child) td:nth-child(3) {
    border-bottom: 1px solid var(--border-color);
    text-align: right;
    width: 15%;
  }
  .payment-receipt-resume .total-table tr:last-child td:nth-child(2) {
    text-align: left;
    width: 25%;
  }
  .payment-receipt-resume .total-table tr:last-child td:nth-child(3) {
    text-align: right;
    width: 25%;
  }

  .payment-receipt-details-title {
    page-break-before: always;
  }

  .breakdown-details table {
    border-collapse: collapse;
  }
  .breakdown-details {
    margin-top: -15px;
  }
  .breakdown-details-table tr td {
    padding-bottom: 8px;
    padding-top: 8px;
  }
  .breakdown-details-table tr td:last-child {
    text-align: right;
  }
  .breakdown-details-table tr td {
    border-bottom: 1px solid var(--border-color);
  }
  .breakdown-details-table tr:first-child td {
    border-top: 1px solid var(--border-color);
  }

  .powered-by {
    width: 100%;
    text-align: right;
  }
  .powered-by span {
    color: #8c95a6;
  }
  .powered-by img {
    width: 37px;
    height: 11px;
    vertical-align: middle;
    margin-top: 2px;
  }
  .alert {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 16px;
    gap: 16px;
    background: #F3F4F6;
    border-radius: 12px;
  }
  .payment-receipt-resume-table tr.details, .payment-receipt-resume-table tr.charge-name {
    border: none;
  }
  .payment-receipt-resume-table tr.charge-name td {
    padding-bottom: 0;
    color: #19212e;
  }
  .payment-receipt-resume-table tr.details td {
    color: #66758F;
    padding-top: 4px;
    padding-bottom: 4px;
  }
  .payment-receipt-resume-table tr.details td:first-child {
    padding-left: 8px;
  }
  .payment-receipt-resume-table tr.details.subtotal td {
    padding-bottom: 8px;
    border-bottom: 1px solid var(--border-color);
    color: #19212e;
  }
